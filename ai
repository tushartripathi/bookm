  <div class="header">ðŸ¤– AI Links Vault</div>
  <div class="container">
    <ul id="ai-links-list">
      <!-- List items will be generated by JS -->
    </ul>
  </div>
  <script>
  const urls = [
    "https://www.alignmentforum.org/",
    "https://news.mit.edu/topic/artificial-intelligence2",
    "https://towardsai.net/p",
    "https://www.marktechpost.com/",
    "https://www.wired.com/tag/artificial-intelligence/",
    "https://www.technologyreview.com/topic/artificial-intelligence/",
    "https://www.theverge.com/ai-artificial-intelligence",
    "https://venturebeat.com/category/ai/",
    "https://aibusiness.com/",
    "https://analyticsindiamag.com/",
    "https://syncedreview.com/",
    "https://arxiv.org/list/cs.AI/recent",
    "https://techcrunch.com/category/artificial-intelligence/",
    "https://www.deeplearning.ai/the-batch/",
    "https://www.exponentialview.co/",
    "https://aiweekly.co/",
    "https://lastweekin.ai/",
    "https://importai.substack.com/",
    "https://www.theneurondaily.com/",
    "https://aiimpacts.org/#gsc.tab=0",
    "https://substack.com/home",
    "https://www.analyticsvidhya.com/blog/",
    "https://sciencedaily.com/news/computers_math/artificial_intelligence/",
    "https://www.therundown.ai/",
    "https://www.kdnuggets.com/",
    "https://www.bensbites.com/",
    "https://www.superhuman.ai/"
  ];

  const list = document.getElementById('ai-links-list');
  urls.forEach(url => {
    const li = document.createElement('li');
    li.innerHTML = `<a href="${url}" target="_blank">${url}</a>
      <button onclick="fetchNews(this, '${url}')">Show News</button>
      <div class="news-result"></div>`;
    list.appendChild(li);
  });

  async function fetchNews(btn, url) {
    btn.disabled = true;
    btn.textContent = 'Loading...';
    const resultDiv = btn.nextElementSibling;
    resultDiv.textContent = '';
    try {
      const res = await fetch(`http://localhost:3001/scrape?url=${encodeURIComponent(url)}`);
      const data = await res.json();
      if (data.error) {
        resultDiv.textContent = 'Error: ' + data.error;
      } else {
        resultDiv.innerHTML = `<strong>${data.title}</strong><br>${data.description}`;
      }
    } catch (e) {
      resultDiv.textContent = 'Failed to fetch news.';
    }
    btn.disabled = false;
    btn.textContent = 'Show News';
  }
  </script>
